{% extends 'base.html.twig' %}

{% block title %}AvForm index{% endblock %}

{% block body %}
    <h1 class="my-2 pb-6 text-yellow-400 text-2xl font-bold right-0">Demandes de réservation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for av_form in av_forms %}
            <tr>
                <td>{{ av_form.id }}</td>
                <td>{{ av_form.messageForm }}</td>
                <td>
                    <a href="{{ path('app_av_travel_show', {'id': av_form.id}) }}"   class="flex bg-blue-400 rounded p-2 m-2 text-white inline">Détails</a>

                    <a href="{{ path('app_av_travel_edit', {'id': av_form.id}) }}"  class="flex bg-yellow-400 rounded p-2 m-2 text-white inline">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_av_form_new') }}"  class="bg-green-400 rounded p-2 m-2 text-white inline text-right my-4">Créer</a> #}
{% endblock %}
